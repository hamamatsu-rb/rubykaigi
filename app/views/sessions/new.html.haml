- @title = 'Sign in / Sign up'
- content_for :head do
  %style(type='text/css')
    :sass
      input[name=openid_identifier]
        :padding-left 20px
        :background
          :image url('/images/openid_logo.gif')
          :repeat no-repeat
          :position 2px center

#content
  %h1= @title
  %article#signin
    %h2 You can Sign in/up with OAuth/OpenID
    %p.btn
      != link_to image_tag('/2011/images/registerBtnTwitter.png', :alt => 'via Twitter'), "/auth/twitter"
    %p.btn
      != link_to image_tag('/2011/images/registerBtnGoogle.png', :alt => 'via Google'), "/auth/open_id?openid_url=https://www.google.com/accounts/o8/id"
    %p.btn
      != link_to image_tag('/2011/images/registerBtnYahoo.png', :alt => 'via Yahoo!'), "/auth/open_id?openid_url=http://yahoo.com"
    %p.btn
      != link_to image_tag('/2011/images/registerBtnYahooJapan.png', :alt => 'via Yahoo!JAPAN'), "/auth/open_id?openid_url=http://yahoo.co.jp"
    %p.btn
      != link_to image_tag('/2011/images/registerBtnMixi.png', :alt => 'via mixi'), "/auth/open_id?openid_url=http://mixi.jp"
    %p.cleft
      or signin via other OpenID providers:
      != form_tag "/auth/open_id", :method => :get do
        %p
          != text_field_tag :openid_url
          != submit_tag 'Sign in', :id => :signin_with_openid
    %p.cleft
      or signin with password:
      != form_tag "/auth/password", :method => :post do
        %p
          != text_field_tag :identifier, nil, :placeholder => "Username"
          != password_field_tag :password, nil, :placeholder => "Password"
          != submit_tag 'Sign in', :id => :signin_with_password
